datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator db {
  provider             = "prisma-client-py"
  interface            = "sync"
  recursive_type_depth = 5
}

model Scout {
  slack_id String  @id
  shifts   Shift
}

model Shift {
  shift_id String   @id
  time_ranges TimeRange[]
  scouts   Scout[]
}

model TimeRange {
  id     Int     @id @default(autoincrement())
  start  DateTime
  end    DateTime
  shift  Shift
}
